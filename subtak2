#include <iostream>
#include <bitset>
#include <cstdlib>
#include <ctime>
using namespace std;

// Convert Decimal to Binary
void decimalToBinary(int decimal) {
    cout << "Binary: " << bitset<16>(decimal) << endl;
}

// Convert Binary to Decimal
void binaryToDecimal(string binary) {
    int decimal = stoi(binary, nullptr, 2);
    cout << "Decimal: " << decimal << endl;
}

// Convert Decimal to Hexadecimal
void decimalToHexadecimal(int decimal) {
    cout << "Hexadecimal: " << hex << uppercase << decimal << dec << endl;
}

// Convert Hexadecimal to Decimal
void hexadecimalToDecimal(string hexValue) {
    int decimal = stoi(hexValue, nullptr, 16);
    cout << "Decimal: " << decimal << endl;
}

// Demo: generate random number and show in Binary
void demo() {
    srand(time(0));
    int randomNum = rand() % 100;
    cout << "Random number: " << randomNum << endl;
    cout << "Binary: " << bitset<16>(randomNum) << endl;
}

int main() {
    int choice;
    do {
        cout << "\n=== Number Conversion Program ===" << endl;
        cout << "1. Convert Decimal to Binary" << endl;
        cout << "2. Convert Binary to Decimal" << endl;
        cout << "3. Convert Decimal to Hexadecimal" << endl;
        cout << "4. Convert Hexadecimal to Decimal" << endl;
        cout << "5. Demo (Generate and convert random integer to Binary)" << endl;
        cout << "6. Exit" << endl;
        cout << "Enter your choice: ";
        cin >> choice;

        if (choice == 1) {
            int decimal;
            cout << "Enter Decimal number: ";
            cin >> decimal;
            decimalToBinary(decimal);
        } 
        else if (choice == 2) {
            string binary;
            cout << "Enter Binary number: ";
            cin >> binary;
            binaryToDecimal(binary);
        } 
        else if (choice == 3) {
            int decimal;
            cout << "Enter Decimal number: ";
            cin >> decimal;
            decimalToHexadecimal(decimal);
        } 
        else if (choice == 4) {
            string hexValue;
            cout << "Enter Hexadecimal number: ";
            cin >> hexValue;
            hexadecimalToDecimal(hexValue);
        } 
        else if (choice == 5) {
            demo();
        } 
        else if (choice == 6) {
            cout << "Exiting program..." << endl;
        } 
        else {
            cout << "Invalid choice. Try again." << endl;
        }
    } while (choice != 6);

    return 0;
}
